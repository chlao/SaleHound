<!doctype html>

<html lang="en">
<head>

    <meta charset="utf-8">
    <!-- initial-scale=1 sets the intial zoom level when the page is first loaded by the browser-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Favorite Stores</title>

    <!--Javascript Imports -->
    <script src="/js/jquery-1.11.0.js"> </script>
    <script src="/js/bootstrap-3.3.2-dist/js/bootstrap.js"> </script>

    <!-- JQuery (necessary for Bootstrap's Javascript plugins)-->
    <script src="https://code.jquery.com/jquery.js"></script>
        <!-- Link to external javascript --> 
    
    <script src="/js/bootstrap-3.3.2-dist/js/bootstrap.min.js"></script>

    <script src="/js/jquery-sticky.js"></script>
    <script>
      $(document).ready(function(){
        $("#sticker").sticky({topSpacing:0});
      });
    </script>

    <!-- Bootstrap imports --> 
    <link href="/js/bootstrap-3.3.2-dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/js/bootstrap-3.3.2-dist/css/bootstrap-theme.min.css" rel="stylesheet">

    <script src="js/header.js"></script>
    <script src="js/unsubscribe.js"></script>

    <!--- Link to external style sheet -->
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link rel="stylesheet" type="text/css" href="css/header.css">
    <link href="css/thumbnail-gallery.css" rel="stylesheet">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
        <link href="css/overlay.css" rel="stylesheet">

</head>


<body>
    <div id= "sticker" class="navbar navbar-default navbar-fixed-top" role="navigation"> 
        <div class="container">
            <div class= "navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> 
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                 </button>
               <a class="navbar-brand" href="/">Favorite Stores</a>
            </div>
            <div class="navbar-collapse collapse"> 
                <ul class="nav navbar-nav nav-pills"> 
                    <li ><a href="/"><i class="fa fa-home fa-fw fa-2x"></i></a></li>
                    <li class="active"><a href="/myStores"><i class="fa fa-star fa-2x"></i></a></li>
                    <li><a href="/allStores">       <i class="fa fa-shopping-cart fa-2x"></i></a></li>
                    <li><a href="/saleWatch"><i class="fa fa-binoculars fa-2x"></i></a></li>
                     <li><a href="/account"><i class="fa fa-cog fa-2x"></i></a></li>

                </ul>
            </div>


        </div>
    </div>

<!-- Bootstrap grid system-->

{{#each stores}}
    {{#if subscribed}}
    <div class="col-lg-3 col-md-4 col-xs-6 thumb store" id="{{_id}}">
                    <div id="container">

        <a class="thumbnail">
            <img src = "/images/stores/{{imageURL}}" class="img-rounded img-responsive image"
            <input type="button" name="subscribe" id="subscribe" value="Subscribe to Store" 
            style="height:150px;width:150px;" class="btn btn-default">
            <p id="text2">
            <i class="fa fa-minus"></i>
        </p>

        </a>
    </div>
    </div>
    {{/if}}
{{/each}}

<!-- Using handlebars 
{{#each stores}}
<div class = "block">
    <img src = "/images/{{imageURL}}" class = "img-rounded img-responsive">
</div>
{{/each}}-->

</body>

</html>
