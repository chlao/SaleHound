<!doctype html> 

<!-- lang specifies the language of the element's content-->
<html lang="en"> 
<head>
	<!-- Specifies the character encoding for the HTML document - Unicode-->
	<!-- Meta is data and data-->
	<meta charset="utf-8">
	<!-- initial-scale=1 sets the intial zoom level when the page is first loaded by the browser-->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Sales Feed</title>

	<!--Javascript Imports -->
	<script src="/js/jquery-1.11.0.js"> </script>
	<script src="/js/bootstrap-3.3.2-dist/js/bootstrap.js"> </script>

	<!-- JQuery (necessary for Bootstrap's Javascript plugins)-->
	<script src= "https://code.jquery.com/jquery.js"></script>
		<!-- Link to external javascript --> 

	<script src="/js/bootstrap-3.3.2-dist/js/bootstrap.min.js"></script>

	<script src="/js/jquery-sticky.js"></script>
	<script>
	  $(document).ready(function(){
	    $("#sticker").sticky({topSpacing:0});
	  });
	</script>

    <!-- Bootstrap imports --> 
	<link href="/js/bootstrap-3.3.2-dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="/js/bootstrap-3.3.2-dist/css/bootstrap-theme.min.css" rel="stylesheet">

    <script src="/js/header.js"></script>

	<!--- Link to external style sheet -->
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<link rel="stylesheet" type="text/css" href="/css/header.css">
    <link href="css/thumbnail-gallery.css" rel="stylesheet">
      <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    
	<!--<script src="/js/salehound.js"></script>-->
    <!--{{> tracking_code_script}}-->

    <script src="/js/watch_sale.js"></script>

</head>

<body>
	<div id= "sticker" class="navbar navbar-default navbar-fixed-top" role="navigation"> 
        <div class="container">
            <div class= "navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> 
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                 </button>
               <a class="navbar-brand " href="/">Sale Feed</a>
            </div>
            <div class="navbar-collapse collapse"> 
                <ul class="nav navbar-nav nav-pills"> 
                    <li class="active"><a href="/"><i class="fa fa-home fa-fw fa-2x"></i></a></li>
                    <li><a href="/myStores"><i class="fa fa-star fa-2x"></i></a></li>
                    <li><a href="/allStores">      	<i class="fa fa-shopping-cart fa-2x"></i></a></li>
                    <li><a href="/saleWatch"><i class="fa fa-binoculars fa-2x" ></i></a></li>
                     <li><a href="/account"><i class="fa fa-cog fa-2x"></i></a></li>

                </ul>
            </div>


        </div>
    </div>

	<!-- Feed -->
	<div class="container">
	{{#each sales}}
		<div class="sale" id="sale{{_id}}">
			<a href="#" class="thumbnail">
				<div align="center"  class= "linkdescription">
					{{storeName}} <br>
					{{description}}
				</div>
				<div align="left">
					<img src="images/items/{{imageURL}}" class="img img-responsive" height="150" width="150">
				</div>
				<div align="right">
					<input type="button" name="watch" id="watch" value="Watch Sale" 
					class="btn btn-default version_a_watch btn-primary">
				</div>
			</a>
		</div>
	{{/each}}
	</div>
</body>
</html>